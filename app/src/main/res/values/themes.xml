<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyAI" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/disabledColor</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="darkTheme.MyAI" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/disabledButtonSend</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimaryDisableOnly">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
    </style>
    <style name="LargeTextAppearance" parent="TextAppearance.AppCompat.Large" />
    <style name="MediumTextAppearance" parent="TextAppearance.AppCompat.Medium" />
    <style name="SmallTextAppearance" parent="TextAppearance.AppCompat.Small" />
    <style name="CustomScrollbar">
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_track</item>
    </style>
    <style name="MyMenuItemStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@drawable/title_border</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DarkAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/black</item>
    </style>
</resources>